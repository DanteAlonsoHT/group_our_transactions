<h1>Groups</h1>

<div class="link-container position-relative">
  <div class="btn2 btn-outline-green d-fixed position-fixed bottom-0 start-50 
        translate-middle-x w-100">
    <%= link_to 'New Group', new_group_path, 
        class: "btn2 btn-outline-green w-100 border border-white" %>
    </div>
<div>

<div class="groups-container">

<% @groups.all.where("id != 5").order("created_at DESC").each do |group|  %>

  <div class="m-3 card-show bg-white p-3 gray_text_medium font-bold max-560 mx-auto">
    <div class="d-flex">
      <%= check_image_by_group_id(group.id) %>
      <div class="fs-6 d-flex align-items-center mx-2">
        <strong><%= group.name %></h3></strong>
      </div>
    </div>
    <hr>
    <span class="gray_text_low font-light"> <%= group.created_at.to_s(:long) %> </span>
    <hr>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to 'Edit', edit_group_path(group), class: "text-muted font-light text-decoration-none mx-2" %> |
      <%= link_to 'Show', group, class: "text-muted font-light text-decoration-none mx-2" %>
    </div>
  </div>
  
<% end %>

</div>
