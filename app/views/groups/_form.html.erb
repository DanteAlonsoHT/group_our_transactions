<%= form_with(model: @group, class: "w-100") do |form| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> Prohibited this group from being saved:</h2>
      <ul>
        <% @group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, class: "value-input", 
    class: "form-control fs-4 text-muted text-center", placeholder: "Type the name" %>
  </div>

  <div class="field">
    <%= form.label :icon, "Upload a photo to represent your group", class: "form-label d-block text-center text-muted fs-4 mt-5" %>
    <%= form.file_field :icon, class: "form-control text-muted mb-3"  %>
  </div>


  <div class="link-container position-relative">
    <div class="btn2 btn-outline-green actions d-fixed position-fixed bottom-0 start-50 
          translate-middle-x w-100">
      <%= form.submit class: "btn2 btn-outline-green w-100 border border-white" %>
      </div>
  <div>
<% end %>

